    <form bindsubmit="lock_login">
  <view class="section">
    <input style='margin-top: 60px;' name="phone" auto-focus class="login-txt" auto-focus placeholder="输入手机号" auto-focus/>
  </view>
  <view class="section">
    <input password='true' style='margin-top: 10px;' class="login-txt" name="pwd" placeholder="输入密码"/>
    <view class="btn-area">
      <button style='margin-top: 10px;' class="login-btn" form-type="submit">登陆</button>
    </view>
  </view>
</form>
    <view class="forget-reg">
      <text class="forget">忘记密码</text>
      <text bindtap="register" class="reg">注册</text>      
    </view>
  </view>
</view>